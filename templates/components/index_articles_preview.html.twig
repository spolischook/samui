<div class="col-md-4">
    <div class="card mb-4 box-shadow">
        <img
                class="card-img-top img-fluid"
                alt="{{ article.title }}"
                src="{{ vich_uploader_asset(article, 'imageFile')|imagine_filter('article_preview') }}"
        >
        <div class="card-body">
            <a class="text-dark" href="{{ path('article_view', { slug: article.slug }) }}">
                <h3>{{ article.title }}</h3>
            </a>
            <p class="card-text">{{ article.shortText }}</p>
            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ path('article_view', { slug: article.slug }) }}">
                    {{ 'continue_reading'|trans }}
                </a>
            </div>
        </div>
    </div>
</div>
