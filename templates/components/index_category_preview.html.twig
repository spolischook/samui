<div class="col-md-6">
    <div class="card flex-md-row mb-4 box-shadow h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
            {#<strong class="d-inline-block mb-2 text-primary">World</strong>#}
            <h3 class="mb-0">
                <a class="text-dark" href="{{ path('category_index', { slug: category.slug }) }}">
                    {{ category.name }}
                </a>
            </h3>
            {#<div class="mb-1 text-muted">Nov 12</div>#}
            <p class="card-text mb-auto">{{ category.description }}</p>
            <a href="{{ path('category_index', { slug: category.slug }) }}">
                {{ 'continue_reading'|trans }}
            </a>
        </div>
        <img
                class="card-img-right flex-auto d-none d-md-block"
                data-src="{{ vich_uploader_asset(category, 'imageFile')|imagine_filter('index') }}"
                alt="{{ category.name }}"
                style="width: 200px; height: 250px;"
                src="{{ vich_uploader_asset(category, 'imageFile')|imagine_filter('index') }}"
        >
    </div>
</div>
